@model Streamnote.Relational.Models.Descriptors.TaskDescriptor

<div class="row">
    <div class="col-md-12">
        <form id="createTaskForm" onsubmit="saveTask(@Model.ProjectId); return false;">  
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input id="taskTitle" class="form-control" type="text" name="Title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <input class="btn btn-light" type="submit" value="Create"/>
            </div>
        </form>
    </div>
</div>