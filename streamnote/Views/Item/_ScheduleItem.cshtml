 @model Streamnote.Relational.Models.Descriptors.ItemDescriptor
 
 <tr>
            <td>
                @{
                    if (Model.Image != null && Model.ImageContentType != null)
                    {
                        <img src="data:@Model.ImageContentType;base64,@Convert.ToBase64String(Model.Image)"    style="width: 100%;" />
                    }
                }
            </td>
            <td>
                @if (Model.Title != null && Model.Title.Length > 0)
                {
                    <strong>@Html.DisplayNameFor(model => model.Title)</strong>
                    <br/>
                    @Html.DisplayFor(modelItem => Model.Title)<br/> 
                <br/>
                }
                @if (Model.Content != null && Model.Content.Length > 12)
                {
                    <strong>@Html.DisplayNameFor(model => model.Content)</strong>
                    <br/>
                    @if (Model.Content != null && Model.Content.Length > 200)
                    {
                        @Html.Raw(Model.Content.Substring(0, 200))
                        <br/>
                        <a asp-action="Details" asp-route-id="@Model.Id"> Readmore.... </a>
                        <br/>
                    }
                    else
                    {
                        @Html.Raw(Model.Content)
                        <br/>
                    }
                }           
                
                </td>
            <td>
                <div style="font-size: 0.7em; text-align: center; padding: 3px 3px 8px 3px;">

                    @if (Model.IsPublic)
                    {
                        <strong style="color: chartreuse">published <i class="fa fa-check"></i></strong>
                    }
                    else
                    {
                        <strong style="color: royalblue">draft <i class="fa fa-pencil"></i></strong>
                    }    
                    
                    <strong>comments: @Model.CommentCount</strong><br/>
                    <strong>likes: @Model.LikeCount</strong><br/>
                </div>
                
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light" style="margin: 2px; width: 100%;">Edit</a> <br/>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light" style="margin: 2px; width: 100%;">Details</a> <br/>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-warning" style="margin: 2px; width: 100%;">Delete</a>
            </td>
        </tr>