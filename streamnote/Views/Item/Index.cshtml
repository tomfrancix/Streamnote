@model IEnumerable<Streamnote.Relational.Models.Descriptors.ItemDescriptor>

@{
    ViewData["Title"] = "Your Posts";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <ul class="nav nav-pills nav-justified"">
                <li class="active nav-item item-options">
                    <a data-toggle="tab" class="nav-link" href="#published">
                        <i class="fa fa-check"></i> <br class="hideOnWideScreen"/>
                        published
                    </a>
                </li>
                <li class="nav-item item-options">
                    <a data-toggle="tab" class="nav-link" href="#drafts">
                        <i class="fa fa-pencil"></i><br class="hideOnWideScreen"/>
                        drafts
                    </a>
                </li> 
                <li class="nav-item item-options" >
                    <a href="/Item/Create" class="nav-link">
                        <i class="fa fa-pencil"></i> <br class="hideOnWideScreen"/>
                        create
                    </a>
                </li>
            </ul>

            <div class="tab-content">
                <div id="published" class="tab-pane active">   
                    <table class="table table-bordered"> 
                        <tbody>
                        @foreach (var item in Model.Where(i => i.IsPublic)) {

                            @Html.Partial("_ScheduleItem", item);
                        }
                        </tbody>
                    </table> 
                </div>
                <div id="drafts" class="tab-pane fade">   
                    <table class="table table-bordered">
                        <tbody>
                        @foreach (var item in Model.Where(i => !i.IsPublic)) {

                            @Html.Partial("_ScheduleItem", item);
                        }
                        </tbody>
                    </table> 
                </div>
            </div>
        </div>
    </div>
</div>

