@model Streamnote.Relational.Models.Descriptors.StepDescriptor


<div class="row">
    <div class="col-md-12">
        <form id="createTaskForm" onsubmit="saveStep(@Model.TaskId);return false;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
            <div class="form-group">                                       
                <input id="stepContent" class="form-control" placeholder="What needs doing?"/>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>   
            <div class="form-group">
                <input type="submit" value="submit" class="btn btn-light" style="float: right;" />   
            </div>
        </form>
    </div>
</div>

