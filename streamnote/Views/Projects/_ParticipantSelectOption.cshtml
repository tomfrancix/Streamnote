@model Streamnote.Relational.Models.Descriptors.UserNameDescriptor

<div class="row">
    <div class="col-md-12">
        <div class="card background-element">
            <div class="row">
                <div class="col-sm-1" style="text-align: center;">
                    @{
                        if (Model.UserImage != null && Model.UserImageContentType != null)
                        {
                            <img src="data:@Model.UserImageContentType;base64,@Convert.ToBase64String(Model.UserImage)"
                                 class="icon"/>
                        }
                        else
                        {
                            <i class="fa fa-user" style="padding: 4px; margin-top: 4px;"></i>
                        }
                    }
                </div>
                <div class="col-sm-10">
                    @Model.FirstName @Model.LastName
                    <a onclick="addOrRemoveParticipant('@Model.UserName')" style="float:right">
                        <i class="fa fa-exchange"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



