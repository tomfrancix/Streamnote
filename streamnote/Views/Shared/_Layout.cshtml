<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />
    <title>@ViewData["Title"]</title> 
    <link rel="icon" href="~/Images/streamnote-icon.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css" >
    <link rel="stylesheet" href="~/css/site.css" />  
    <link rel="stylesheet" href="~/css/phone.css" />  
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    
</head>
<body style="width: 100vw; height: 100vh; overflow: hidden;" id="mainBody">
<script>
         if (localStorage.getItem("dark-mode") === "enabled") {
             document.body.classList.add("dark-mode-theme");
         }
     </script>
<header>
    <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-light background-standard border-bottom box-shadow mb-3 background-medium ">
        <div class="container-fluid background-medium color-standard">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/Images/streamnote-icon.png" style="width: 20px; margin: 2px 5px;"/>
                streamnote
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon color-standard" ></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 hideOnPhone">
                    <partial name="_MenuLinks"/>
                </ul>
                <ul class="navbar-nav hideOnPhone">
                    <partial name="_Notifications"/>
                </ul> 
                <ul class="navbar-nav hideOnWideScreen">
                    <partial name="_PhoneMenu"/>
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3" style="padding-top: 70px; height: 100vh; overflow-y: scroll;">
        @RenderBody()
    </main>
</div>

<!--div class="fixed-bottom  hide">
    <nav class="navbar navbar-light bg-light">
        <div style="width: 100%;">
            <ul class="navbar-nav">
                <partial name="_MenuLinks"/>
                <partial name="_Notifications"/>
            </ul>
        </div>
    </nav>
</div-->

<!-- The Modal -->
<div class="modal background-medium color-standard" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content background-medium color-standard">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Notifications</h4>
                <button type="button" class="close color-standard" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body" id="newNotifications">
            </div>
        </div>
    </div>
</div>

<!-- The Modal -->
<div class="modal" id="mySearchModal">
    <div class="modal-dialog">
        <div class="modal-content background-medium color-standard">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Search</h4>
                <button type="button" class="close color-standard" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">

                        <div class="input-group">
                            <div class="input-group rounded">
                                <input type="search" id="searchInput" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon"/>
                                <span class="input-group-text border-0" id="search-addon">
                                    <i class="fa fa-search"></i>
                                </span>
                            </div>
                        </div>

                        <div id="suggestions"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- The Projects -->
<div class="modal" id="createProjectModal">
    <div class="modal-dialog">
        <div class="modal-content background-medium color-standard">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Create Project</h4>
                <button type="button" class="close  color-standard" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12" id="createProjectBody">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- The Tasks -->
<div class="modal" id="createTaskModal">
    <div class="modal-dialog">
        <div class="modal-content background-medium color-standard">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Create Task</h4>
                <button type="button" class="close color-standard" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12" id="createTaskBody">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- The Tasks -->
<div class="modal" id="createStepModal">
    <div class="modal-dialog">
        <div class="modal-content background-medium color-standard">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Create Task</h4>
                <button type="button" class="close color-standard" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12" id="createStepBody">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- The Tasks -->
<div class="modal" id="createTaskCommentModal">
    <div class="modal-dialog">
        <div class="modal-content background-medium color-standard">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Create Comment</h4>
                <button type="button" class="close color-standard" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12" id="createTaskCommentBody">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  

<!-- The Tasks -->
<div class="modal" id="addParticipantModal">
    <div class="modal-dialog">
        <div class="modal-content background-medium color-standard">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add Participants</h4>
                <button type="button" class="close color-standard" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="row" id="addParticipantBody">
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/connection.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src='~/lib/jquery/jquery-sortable.js'></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script src="~/lib/bootbox/bootbox.min.js"></script>
<script src="~/js/delete.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/organiser.js" asp-append-version="true"></script>
<script src="~/js/analytics.js" asp-append-version="true"></script> 
<script src="~/js/editor.js" asp-append-version="true"></script>
<script src="~/js/localStorage.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)


<script>
    if (window.location.href.includes("/Analytics/View")) {
        loadTaskData();
    }
</script>
</body>
</html>