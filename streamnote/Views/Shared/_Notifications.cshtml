@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
                       
@if (SignInManager.IsSignedIn(User))
{          
    <li class="nav-item custom-nav-item">
        <a class="nav-link color-standard" data-toggle="modal" data-target="#mySearchModal" title="Search">
            <i class="fa fa-search"></i>
        </a>
    </li>
    <li class="nav-item custom-nav-item">
        <a class="nav-link color-standard" href="/Messages/Index" title="Messages">
            <i class="fa fa-envelope notifyCircle" id="messagesIcon"></i>
        </a>
    </li> 
    <li class="nav-item custom-nav-item">
        <a class="nav-link color-standard" data-toggle="modal" data-target="#myModal" title="Notifications">
            <i class="fa fa-bell" id="notificationsIcon"></i>
        </a>
    </li> 
    <li class="nav-item custom-nav-item">
        <a class="nav-link color-standard dark-mode-toggle" title="Dark mode"  id="toggle-btn">
            <i class="fa fa-adjust"></i>
        </a>
    </li>
}