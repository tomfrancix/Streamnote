@model Streamnote.Relational.Models.Descriptors.StepDescriptor

<div class="container-fluid" id="@Model.StepIdentifier"> 
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="step">
                    <div class="taskContainer">
                        <div>
                            <i class="fa fa-circle taskTab" style="color: rgba(0, 0, 0, 0.1);"></i>
                            <p class="taskTitle">@Model.Content</p>   
                            <div style="float:right" style="display: inline-block;margin-right: 40px;">           
                                @{
                                    if (Model.IsCompleted)
                                    {                                                   
                                        <button ontouchstart="changeStepStatus(@Model.Id, '@Model.IsCompleted')" onclick="changeStepStatus(@Model.Id, '@Model.IsCompleted')" class="btn btn-light" style="margin-right: 5px;">
                                            <i class="fa fa-check" style="color:chartreuse"></i>
                                        </button>

                                    }
                                    else
                                    {         
                                        <button ontouchstart="changeStepStatus(@Model.Id, '@Model.IsCompleted')" onclick="changeStepStatus(@Model.Id, '@Model.IsCompleted')" class="btn btn-light" style="margin-right: 5px;">
                                            <i class="fa fa-square" style="color:black"></i>
                                        </button> 
                                        <a class="btn btn-danger" style="margin-right: 5px;">
                                            <i class="fa fa-close deleteStep" data-iden="@Model.Id" style="color:black"></i>
                                        </a>
                                    }
                                } 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>