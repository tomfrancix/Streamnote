@model Streamnote.Relational.Models.Descriptors.UserNameDescriptor

<a href="/Profile/View?username=@Model.UserName" style="text-underline:none;">
    @{
        if (Model.UserImage != null && Model.UserImageContentType != null)
        {
        <img src="data:@Model.UserImageContentType;base64,@Convert.ToBase64String(Model.UserImage)"
             class="icon" />
        }
    }
</a>                                               
<a href="/Profile/View?username=@Model.UserName" style="margin-left:5PX;text-underline:none">
    
    <strong>@Html.DisplayFor(modelItem => Model.FullName)</strong>
</a>                                                       